<div class="article-list hfeed">

{.repeated section items}

  <article class="{@|item-classes}" id="article-{id}" data-item-id="{id}">

    <!--POST HEADER-->

    <header>
      <h1 class="entry-title" itemprop="headline">
        {.passthrough?}
          <a href="{sourceUrl}" target="_blank">{title} <span>&rarr;</span></a>
        {.or}
          <a href="{fullUrl}">{title}</a>
        {.end}
      </h1>
      <div class="meta">
        <span class="date"><time class="published dt-published" datetime="{addedOn|date %F}" itemprop="datePublished" pubdate><a href="{fullUrl}">{addedOn|date %B %e, %Y}</a></time></span>
        {.section author}<span class="author"><a href="{collection.fullUrl}?author={id}" rel="author">{displayName}</a></span>{.end}
      </div>
    </header>

    <!--SPECIAL CONTENT-->

    {.section promotedBlock}
      <div class="special-content">{@}</div>
    {.end}

    <!--POST BODY-->

    {.excerpt?}
      <div class="body entry-content">{excerpt} <a class="read-more" href="{fullUrl}">{localizedStrings.readMore}</a></div>
    {.or}
      {.section body}<div class="body entry-content">{@}</div>{.end}
      {.passthrough?}{.or}{.section sourceUrl}<div class="body entry-source">{localizedStrings.source}: <a href="{sourceUrl}" target="_blank">{sourceUrl|truncate 42}</a></div>{.end}{.end}
    {.end}


    <!--POST FOOTER-->

    <footer class="clear">
      <div class="meta">

        {postItemInjectCode}

        {.if categories || tags}
        <div class="first meta-row{.if categories} category{.end}{.if tags} tags{.end}">
          {.section categories}<span class="categories"><span class="categories-title">{localizedStrings.in}</span> {.repeated section @}<a href="/{collection.urlId}/category/{@|url-encode}" rel="tag">{@}</a>{.alternates with}, {.end}</span>{.end}
          {.section tags}<span class="tags"><span class="tags-title">{localizedStrings.tags}</span> {.repeated section @}<a href="/{collection.urlId}/tag/{@|url-encode}" rel="tag">{@}</a>{.alternates with}, {.end}</span>{.end}
        </div>
        {.end}

        <div class="second meta-row">
          {.comments?}
            {.if websiteSettings.disqusShortname}
              <span class="comments"><a href="{fullUrl}#comments-{id}" class="comment-link">{localizedStrings.comment}</a></span>
            {.or}
              {.section publicCommentCount}
                <span class="comments"><a href="{fullUrl}#comments-{id}">{localizedStrings.commentCountMessage|message @}</a></span>
              {.or}
                <span class="comments"><a href="{fullUrl}#comments-{id}">{localizedStrings.comment}</a></span>
              {.end}
            {.end}
          {.end}
          {@|social-button-inline}
          {@|like-button}
        </div>

      </div>
    </footer>


  </article>

{.end}


<!--PAGINATION-->

{.section pagination}
  <nav class="pagination clear">
      {.section prevPage}<a class="newer-posts" href="{prevPageUrl}">&larr; Newer Posts</a>{.end}
      {.section nextPage}<a class="older-posts" href="{nextPageUrl}">Older Posts &rarr;</a>{.end}
  </nav>
{.end}

</div>

<aside id="sidebar"><squarespace:block-field id="sidebarBlocks" label="Sidebar Content" /></aside>

